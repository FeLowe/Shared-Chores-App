<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lists_row_height"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margin_small"
    android:paddingStart="@dimen/margin_small">

    <TextView
        android:id="@+id/listNameTextView"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list name"/>

    <TextView
        android:id="@+id/createdByTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listNameTextView"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:text="created by"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/list_created_by_text_size" />

    <TextView
        android:id="@+id/createdByUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="created by user"
        android:layout_below="@+id/listNameTextView"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/createdByTextView"
        android:layout_toRightOf="@+id/createdByTextView"
        android:textSize="@dimen/list_created_by_text_size"
        android:textStyle="bold" />

</RelativeLayout>